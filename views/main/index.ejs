	<style>
		._extras > div{
			margin: 10px 0;
			padding: 10px;
		}
		div._gifts{
			padding: 30px 10px;
			background: #443034;
			text-align: center;
		}
		._gifts p{
			display: inline;
			max-width: 450px;
			width: 90%;
			/* background: #e4e2e2; */
			font-size: 6vmin;
			color: #e4e2e2;
			/* box-shadow: 0 -5px 0 5px #e4e2e2; */
		}
		._gifts span{
			display: inline-block;
			background: #e4e2e2;
			font-size: 4vmin;
			color: #000000;
			box-shadow: 7px 0 0 #e4e2e2, -7px 0 0 #e4e2e2;
		}
		.shop-now{
			position: relative;
			height: 350px;
			background: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)),url(img/bg1.jpg);
			background-size: cover;
			background-position: bottom;
		}
		.shop-now span{
			display: block;
			width: 70%;
			color: #cac8c8;
			text-align: center;
			font-size: 10vmin;
			font-weight: 700;
			position: absolute;
			bottom: 20%;
			left: 50%;
			transform: translateX(-50%);
		}
		.shop-now button{
			cursor :pointer;
			display: block;
			padding: 5px 22px;
			font-size: 18px;
			background: #cac8c8;
			border: none;
			outline: none;
			position: absolute;
			bottom: 10%;
			left: 50%;
			transform: translateX(-50%);
		}
		._outlets{
			text-align: center;
			background-color: #443034;
		}
		._outlets h2{
			font-size: 7vmin;
			color: #e4e2e2;
		}
		._outlets p{
			display: inline;
			/* background: #000000; */
			color: white;
			/* box-shadow: 7px 0 0 #000000, -7px 0 0 #000000; */
			font-size: 10vmin;
			font-weight: 700;
		}
		._outlets span{
			display: block;
			width: fit-content;
			max-width: 700px;
			/* background-color: #000000; */
			color: #ffffff;
			margin: 10px auto;
			padding: 5px;
			font-size: 14px;
		}
		._outlets span.deals{
			font-size: 4.5vmin;
			font-weight: 700;
		}
		.showproducts{
			display: grid;
			grid-template-columns: repeat(auto-fit,minmax(150px,1fr));
			gap: 10px;
		}
		.cozzy ._info {
			padding: 5px;
			text-align: center;
		}
		._info h3 {
			font-size: 18px;
			font-weight: 500;
			margin: 10px 0;
		}
		.projects-container.scrollimation.in img {
			object-fit: contain;
			margin: 10px 0 20px;
		}

		.projects-container article.col-md-4.col-sm-6.portfolio-item.web-design.apps.psd {
			margin: 10px auto;
		}
	</style>

