 <!-- Brands -->

 	<!-- Index section -->
	<section class="_index portfolio" align="center">
	
		<div align="center"><h3>BRANDS </h3></div>
		<br>

		<div class="container center-block">
		  <div class="row container bootstrap snippet" style="justify-content: space-around; margin: auto;">

		  	<div class="projects-container scrollimation in">
		  		<div class="row">
			    <% brands.forEach( brand=> { -%>

				<% 
					let image = (brand.main_img) ? `img/brands/${brand.main_img}` : "/img/brand-fallback.png";
				%>

				 <article class="col-md-4 col-sm-6 portfolio-item web-design apps psd">
						<div class="portfolio-thumb in">
