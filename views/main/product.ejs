<script type="text/javascript">


var size = "XS";

var extras = []; 

var qtyValue = parseInt($("#qtyValue").val());  

var totalItemPriceWrapper = $("#itemTotalWrapper");

var productId = "<%=product.id%>";

var productPrice = <%-currencyConvert({to:currencyChoice, value :discountPrice }).result%>;

function addProductToCart (sp_id, p_id) {
	console.trace(qtyValue);
	Cart.add(sp_id, p_id, qtyValue, size);
}

function changeQty(value){
	qtyValue = value;

	let price = qtyValue * productPrice;

	if (price < 1000) price = parseFloat(price).toFixed(2); 

	if (qtyValue == 1) totalItemPriceWrapper.hide();

	if (qtyValue > 1) totalItemPriceWrapper.show();

	$("#totalItemPrice").html(price.toLocaleString());


}


function onlyUnique(value, index, self) { 
	return self.indexOf(value) === index;
}   


$(".qtybtn").on("click", function(){
	if ($(this).hasClass('dec')) {
		qtyValue = qtyValue - 1;
	}

	if ($(this).hasClass('inc')) {
		qtyValue = qtyValue + 1;
	}	


	if (qtyValue == 1) totalItemPriceWrapper.hide();

	if (qtyValue > 1) totalItemPriceWrapper.show();


	let price = qtyValue * productPrice;

	if (price < 1000) price = parseFloat(price).toFixed(2); // for other currencies not NGN

	$("#totalItemPrice").html(price.toLocaleString());

});



$("input[name=size]").on('change',  function() {
